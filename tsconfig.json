{
    "compilerOptions": {
        "allowJs": true,
        "target": "ESNext",
        "module": "esnext",
        // this enables stricter inference for data properties on `this`
        "strict": true,
        "jsx": "preserve",
        "moduleResolution": "node",
        "importHelpers": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": ".",
        "types": ["vite/client"],
        // "paths": {
        //     "@/*": [
        //         "src/*"
        //     ]
        // },
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ],
        "skipLibCheck": true
    },
    "include": [
        "./**/*.ts",
        "./**/*.tsx",
        "./**/*.vue"
    ],
    "exclude": [
        "node_modules"
    ],
    "files": [
        "./shims-vue.d.ts"
    ]
}
